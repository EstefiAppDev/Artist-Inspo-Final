<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all types
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new type
    </h2>

    <form action="/insert_type" method="post">
      <div class="form-group">
        <label for="theme_id_box">
          Theme
        </label>

        <input type="text" id="theme_id_box" name="query_theme_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="genre_id_box">
          Genre
        </label>

        <input type="text" id="genre_id_box" name="query_genre_id" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create type
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Theme
        </th>

        <th>
          Genre
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @types.each do |type| %>
      <tr>
        <td>
          <%= type.id %>
        </td>

        <td>
          <%= type.theme_id %>
        </td>

        <td>
          <%= type.genre_id %>
        </td>

        <td>
          <%= time_ago_in_words(type.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(type.updated_at) %> ago
        </td>

        <td>
          <a href="/types/<%= type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
