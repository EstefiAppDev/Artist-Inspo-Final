<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Type #<%= @type.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/types" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_type/<%= @type.id %>" class="btn btn-block btn-outline-secondary">
          Delete type
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Theme
      </dt>
      <dd>
        <%= @type.theme_id %>
      </dd>

      <dt>
        Genre
      </dt>
      <dd>
        <%= @type.genre_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@type.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@type.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit type
    </h2>

    <form action="/modify_type/<%= @type.id %>"  method="post" >
      <div class="form-group">
        <label for="theme_id_box">
          Theme
        </label>

        <input type="text" id="theme_id_box" name="query_theme_id" class="form-control" value="<%= @type.theme_id %>">
      </div>

      <div class="form-group">
        <label for="genre_id_box">
          Genre
        </label>

        <input type="text" id="genre_id_box" name="query_genre_id" class="form-control" value="<%= @type.genre_id %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update type
      </button>
    </form>
  </div>
</div>

<hr>
