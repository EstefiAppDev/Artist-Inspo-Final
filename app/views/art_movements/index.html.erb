<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all art movements
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new art movement
    </h2>

    <form action="/insert_art_movement" method="post">
      <div class="form-group">
        <label for="genre_name_box">
          Genre name
        </label>

        <input type="text" id="genre_name_box" name="query_genre_name" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create art movement
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Genre name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @art_movements.each do |art_movement| %>
      <tr>
        <td>
          <%= art_movement.id %>
        </td>

        <td>
          <%= art_movement.genre_name %>
        </td>

        <td>
          <%= time_ago_in_words(art_movement.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(art_movement.updated_at) %> ago
        </td>

        <td>
          <a href="/art_movements/<%= art_movement.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
