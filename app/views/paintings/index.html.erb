<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all paintings
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new painting
    </h2>
    

    <form action="/insert_painting" method="post">

      <div class="form-group">
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title" class="form-control">
      </div>
      
      <div class="form-group">
        <label for="date_completed_box">
          Year completed
        </label>

        <input type="text" id="date_completed_box" name="query_date_completed" class="form-control">
      </div>

      <div class="form-group">
        <label for="paint_medium_box">
          Paint medium
        </label>

        <input type="text" id="paint_medium_box" name="query_paint_medium" class="form-control">
      </div>

      <div class="form-group">
        <label for="browser_image">
          Image
        </label>

        <input id="browser_image" type="text" name="input_image" placeholder="Enter a URL for the image...">

      </div>

      <div class="form-group">
        <label for="artist_box">
          Artist
        </label>

        <input type="text" id="artist_box" name="query_artist_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="genre_id_box">
          Genre
        </label>

        <input type="text" id="genre_id_box" name="query_genre_id" class="form-control">
      </div>

 
      <button class="btn btn-block btn-outline-secondary">
        Create painting
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          Image
        </th>

        <th>
          Year completed
        </th>

        <th>
          Paint medium
        </th>

        <th>
          Title
        </th>

        <th>
          Artist
        </th>

        <th>
          Genre
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @paintings.each do |painting| %>
      <tr>
        <td>
          <img src = "<%= painting.image %>" width = "300">
        </td>

        <td>
          <%= painting.date %>
        </td>

        <td>
          <%= painting.paint_medium %>
        </td>

        <td>
          <%= painting.title %>
        </td>

        <td>
          <%= painting.artist.artist_name %>
        </td>

        <td>
          <%= painting.genre_id %>
        </td>

        <td>
          <%= time_ago_in_words(painting.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(painting.updated_at) %> ago
        </td>

        <td>
          <a href="/paintings/<%= painting.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
