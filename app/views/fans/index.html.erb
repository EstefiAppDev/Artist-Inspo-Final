<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all fans
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new fan
    </h2>

    <form action="/insert_fan" method="post">
      <div class="form-group">
        <label for="painting_id_box">
          Painting
        </label>

        <input type="text" id="painting_id_box" name="query_painting_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create fan
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Painting
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @fans.each do |fan| %>
      <tr>
        <td>
          <%= fan.id %>
        </td>

        <td>
          <%= fan.painting_id %>
        </td>

        <td>
          <%= fan.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(fan.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(fan.updated_at) %> ago
        </td>

        <td>
          <a href="/fans/<%= fan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
